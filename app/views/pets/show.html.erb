<div class="container mt-6">
    <h1>
        <%= @pet.name %>
        <small>(<%= @pet.species %> )</small>
    </h1>
    <ul>
        <li>Address: <%= @pet.address %></li>
        <li>Found On: <%= @pet.found_on %></li>
    </ul>

    <p>
        <%= link_to "Edit", edit_pet_path(@pet.id) %>
    </p>
    <p>
        <%= link_to "Delete", 
            pet_path(@pet),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} 
        %>
    </p>
    <p>
        <%= link_to "Back to Pet List", pets_path %>
    </p>
</div>